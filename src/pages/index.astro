---
import BaseLayout from "@layouts/BaseLayout.astro";
import Greeting from '@components/Greeting.jsx';
const pageTitle = "Home Page";
---
<BaseLayout pageTitle={pageTitle}>
	<div class="relative bg-white">
		<div class="mx-auto max-w-7xl lg:grid lg:grid-cols-12 lg:gap-x-8 lg:px-8">
		  <div class="px-6 pt-10 pb-24 sm:pb-32 lg:col-span-7 lg:px-0 lg:pt-48 lg:pb-56 xl:col-span-6">
			<div class="mx-auto max-w-2xl lg:mx-0">
			  <img class="h-11" src="https://tailwindui.com/img/logos/mark.svg?color=blue&shade=600" alt="Your Company">
			  <div class="hidden sm:mt-32 sm:flex lg:mt-16">
				<div class="relative rounded-full py-1 px-3 text-sm leading-6 text-gray-500 ring-1 ring-gray-900/10 hover:ring-gray-900/20">
				  This website was made with Astro. <a href="https://astro.build/" class="whitespace-nowrap font-semibold text-orange-600"><span class="absolute inset-0" aria-hidden="true"></span>Visit them <span aria-hidden="true">&rarr;</span></a>
				</div>
			  </div>
			  <h1 class="mt-24 text-4xl font-bold tracking-tight text-gray-900 sm:mt-10 sm:text-6xl">This Is The B-Side Blog Page</h1>
			  <p class="mt-6 text-lg leading-8 text-gray-600">This blog is where we post about topics we've found useful and interesting along our way to become fullstack web and mobile developers.</p>
			  <div class="mt-10 flex items-center gap-x-6">
				<a href="/blog" class="rounded-md bg-blue-700 px-3.5 py-1.5 text-base font-semibold leading-7 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Most Recent</a>
				<a href="/about" class="text-base font-semibold leading-7 text-gray-900">Learn more <span aria-hidden="true">â†’</span></a>
			  </div>
			</div>
		  </div>
		  <div class="relative lg:col-span-5 lg:-mr-8 xl:absolute xl:inset-0 xl:left-1/2 xl:mr-0">
			<img class="aspect-[3/2] w-full bg-gray-50 object-cover lg:absolute lg:inset-0 lg:aspect-auto lg:h-full" src="https://images.unsplash.com/photo-1498758536662-35b82cd15e29?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2102&q=80" alt="">
		  </div>
		</div>
	  </div>
</BaseLayout>